@model IEnumerable<BasitBlogSitesi.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p style="margin-bottom:20px;">
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>

            <img style="margin-bottom:20px;" class="img-responsive" src="http://placehold.it/900x300" />

            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })

        </div>
        <hr />
    }

}

